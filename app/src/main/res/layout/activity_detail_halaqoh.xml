<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Halaqoh"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_nama_halaqoh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="#17748817747729"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Santri"
            android:layout_marginTop="16dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_nama_santri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Iyang Aditya"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir"
            android:layout_marginTop="16dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tanggal_lahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="13 Januari 2019"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas"
            android:layout_marginTop="16dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Baju, Celana"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asal"
            android:layout_marginTop="16dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_asal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Baju, Celana"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor HP Orang Tua"
            android:layout_marginTop="16dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_nomor_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Baju, Celana"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:layout_marginTop="16dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_jenis_kelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Baju, Celana"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:layout_marginTop="16dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Indonesia - Jepang"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="#000"
            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>